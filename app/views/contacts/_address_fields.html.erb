
<fieldset class="address">
  <div class="field">
    <%= f.label :address %><br/>
    <%= f.text_field :address, class: 'input-address' %>
  </div>
  <div class="field">
    <%= f.label :number %><br/>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :zipcode %><br/>
    <%= f.text_field :zipcode %>
  </div>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %>
</fieldset>